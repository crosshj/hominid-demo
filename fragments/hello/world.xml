<Page>
	<Data
		name='helloWorldPathParams'
		route='/#/:path?'
		debug
	/>
	<Data
		name="helloWorldMenus"
		getData="rootChild"
	/>
	<Data
		name="fragmentContents"
		getData="ui.sp_UIContextGetComponentsByUserID"
		param_fragment="global_helloWorldPathParams.path"
	/>
	<Data
		name='mobileMenuOpen'
		defaultValue="false"
	/>

	<Flow key='openMobileMenu'>
		<SetData name='global_mobileMenuOpen' data='true' />
	</Flow>
	<Flow key='closeMobileMenu'>
		<SetData name='global_mobileMenuOpen' data='false' />
	</Flow>

	<Layout>
		<Header>
			<Logo width="150px" />
		</Header>
		<Menu
			items="global_helloWorldMenus"
			selectMenuFn="runFlow_selectMenu"
			openMobileMenuFn="runFlow_openMobileMenu"
			closeMobileMenuFn="runFlow_closeMobileMenu"
		/>
		<Content>
			<Fragment contents="global_fragmentContents"/>
		</Content>
		<Footer>
			<Typography>footer</Typography>
		</Footer>
		<Sidebar></Sidebar>
	</Layout>
</Page>

